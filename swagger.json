{
  "openapi": "3.0.0",
  "info": {
    "title": "bro back swagger",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "local server"
    }
  ],
  "security": [
    {
      "JWT": []
    }
  ],
  "tags": [
    {
      "name": "Auth operations"
    },
    {
      "name": "Profil operations"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "description": "register endpoint to create profile",
        "operationId": "registerAuth",
        "tags": ["Auth operations"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthInfo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "register successfulled",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Auth"                  
                }
              }
            }
          },
          "400": {
            "description": "parameter is missing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "description": "login endpoint to get token",
        "operationId": "loginAuth",
        "tags": ["Auth operations"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthInfo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "login successfulled",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Auth"                  
                }
              }
            }
          },
          "400": {
            "description": "parameter is missing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/current": {
      "get": {
        "description": "get current logged user infos",
        "operationId": "currentAuth",
        "tags": ["Auth operations"],
        "responses": {
          "200": {
            "description": "user info were obtained",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Auth"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorize request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/me": {
      "get": {
        "description": "get user infos",
        "operationId": "userInfo",
        "tags": ["Profil operations"],
        "responses": {
          "200": {
            "description": "user infos were obtained",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserInfo"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorize request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "user not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "delete user",
        "operationId": "userDelete",
        "tags": ["Profil operations"],
        "responses": {
          "200": {
            "description": "user deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/success"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorize request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "user not found or already deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "patch": {
        "description": "update user infos",
        "operationId": "userUpdate",
        "tags": ["Profil operations"],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthInfo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "user updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorize request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "user not found or cannot be update",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "userLogin": {
        "type": "object",
        "properties": {
          "pseudo": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "user": {
        "type": "object",
        "properties": {
          "pseudo": {
            "type": "string"
          }
        }
      },
      "success": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "authUser": {
        "type": "object",
        "properties": {
          "pseudo": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        }
      },
      "Auth": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/authUser"
          }
        }
      },
      "AuthInfo": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/userLogin"
          }
        }
      },
      "UserInfo": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/user"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "errors": {
            "type": "object"
          }
        }
      }
    },
    "securitySchemes": {
      "JWT": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": ""
      }
    }
  }
}